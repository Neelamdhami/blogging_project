<div class="container">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
          <%= image_tag user_image, class: "user-image" %>
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= current_user&.name %>
          </div>
          <div class="profile-usertitle-job">
            <%= current_user&.email %>
          </div>
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR BUTTONS -->
        <div class="profile-userbuttons">
          <a href="tel:<%=current_user&.contact%>" class="btn btn-success btn-sm">Call</a>
          <a href="mailto:<%= current_user&.email %>" class="btn btn-danger btn-sm">Message</a>
          <%= link_to "Edit", edit_user_registration_path, class: "btn btn-warning btn-sm"%>
        </div>
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
        </div>
        <!-- END MENU -->
        <div class="portlet light bordered">
          <!-- STAT -->
          <div class="row list-separated profile-stat">
            <div class="col-md-4 col-sm-4 col-xs-6">
              <div class="uppercase profile-stat-title"><%= current_user.bloggers.count %></div>
              <div class="uppercase profile-stat-text">Blogs</div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">
              <div class="uppercase profile-stat-title">0</div>
              <div class="uppercase profile-stat-text"> Views </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">
              <div class="uppercase profile-stat-title">0</div>
              <div class="uppercase profile-stat-text">Comments</div>
            </div>
          </div>
          <!-- END STAT -->
          <div>
            <h4 class="profile-desc-title">About <%= current_user&.name %></h4>
            <span class="profile-desc-text"> Lorem ipsum dolor sit amet diam nonummy nibh dolore. </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="profile-content">
        <%= render 'current_user_blogs'%>
      </div>
    </div>
  </div>
</div>