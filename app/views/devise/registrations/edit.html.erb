<body class="bgimg">
<div class="first1">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
  <div>
    <%= image_tag user_image, class: 'user-image' %>
  </div>
  <div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"textbox1" %>
  </div>

    <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, class:"textbox1" %>
  </div>

    <div class="field">
    <%= f.label :contact %><br />
    <%= f.text_field :contact, class:"textbox1" %>
  </div>

    <div class="field">
    <%= f.label :dob %><br />
    <%= f.date_field :dob, class:"textbox1" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"textbox1" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"textbox1" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"textbox1" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"textbox1" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Deactivate</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

</div>
</div>
</body>

<style type="text/css">
  .user-image{
    height: 200px;
    width: 200px;
    border: solid 2px #000;
    border-radius: 50%;
  }
</style>
